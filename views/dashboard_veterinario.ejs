<h1>Bienvenido, Dr. <%= user.nombre %></h1>

<div class="dashboard-container">
  <div class="appointments-section">
    <h2>Citas Programadas</h2>

    <table>
      <thead>
        <tr>
          <th>Fecha</th>
          <th>Cliente</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% citas.forEach(cita => { %>
          <tr>
            <td><%= cita.fecha?.toLocaleString() %></td>
            <td><%= cita.cliente_nombre %></td>
            <td class="actions-column">
              <% if (cita.estado === 'Pendiente') { %>
                <button 
                  onclick="confirmarCita('<%= cita.id %>')" 
                  class="btn-confirm">
                  Confirmar Cita
                </button>
              <% } %>
              <a href="/veterinario/chat/<%= cita.cliente_id %>" class="btn-chat">
                Chatear con cliente
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<style>
  .dashboard-container {
    max-width: 900px;
    margin: 30px auto;
    padding: 28px 32px;
    background: #f0f7f9; /* azul muy suave, fresco */
    border-radius: 14px;
    box-shadow: 0 8px 20px rgb(40 100 120 / 0.2);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  h1 {
    color: #1b4965; /* azul profundo */
    font-weight: 700;
    text-align: center;
    margin-bottom: 38px;
    text-shadow: 0 1px 3px rgba(27, 73, 101, 0.2);
  }

  h2 {
    color: #40916c; /* verde natural */
    margin-bottom: 26px;
    border-bottom: 4px solid #f4a261; /* terracota c√°lido */
    padding-bottom: 12px;
    font-weight: 600;
  }

  table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0 16px;
  }

  thead th {
    text-align: left;
    color: #3a5a40; /* verde oscuro */
    font-weight: 700;
    padding-bottom: 14px;
    border-bottom: 3px solid #a8dadc; /* azul muy claro */
  }

  tbody tr {
    background: #ffffff;
    box-shadow: 0 3px 12px rgb(100 140 120 / 0.12);
    border-radius: 12px;
  }

  tbody tr td {
    padding: 16px 20px;
    vertical-align: middle;
    color: #264653; /* azul oscuro */
    font-weight: 600;
  }

  tbody tr td:not(:last-child) {
    border-right: 1px solid #d8e2dc; /* beige claro */
  }

  .actions-column {
    display: flex;
    gap: 16px;
    justify-content: flex-start;
  }

  .btn-confirm, .btn-chat {
    padding: 10px 22px;
    border: none;
    border-radius: 12px;
    font-weight: 700;
    cursor: pointer;
    transition: background-color 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 5px 14px rgb(38 70 83 / 0.3);
    text-decoration: none;
    color: white;
    user-select: none;
  }

  .btn-confirm {
    background: #2a9d8f; /* verde fresco */
  }

  .btn-confirm:hover {
    background: #21867a;
    box-shadow: 0 7px 18px rgb(33 134 122 / 0.5);
  }

  .btn-chat {
    background: #e76f51; /* terracota suave */
    box-shadow: 0 5px 14px rgb(231 111 81 / 0.4);
  }

  .btn-chat:hover {
    background: #cc5f44;
    box-shadow: 0 7px 18px rgb(204 95 68 / 0.6);
  }

  @media (max-width: 650px) {
    .actions-column {
      flex-direction: column;
      gap: 12px;
    }
    tbody tr td {
      padding: 12px 16px;
      font-size: 15px;
    }
  }
</style>

<script>
function confirmarCita(citaId) {
  fetch(`/citas/confirmar/${citaId}`, {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' }
  })
  .then(res => res.json())
  .then(data => {
    if (data.success) {
      alert('Cita confirmada exitosamente');
      window.location.reload();
    } else {
      alert('Error al confirmar la cita');
    }
  })
  .catch(() => alert('Error al confirmar la cita'));
}
</script>
